<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#000">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="あなたのためのアニメ"
        android:textSize="35dp"
        android:textColor="#6ba8ff"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="𝔽𝕖𝕒𝕥𝕦𝕣𝕖𝕕 ℙ𝕣𝕠𝕕𝕦𝕔𝕥"
        android:textSize="30dp"
        android:textColor="#fff"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#fff"
        android:text="(Fairy Tail Anime Hoodie for the young wizard in you)"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="1.5in"
        android:src="@drawable/hoodiez" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="𝔽𝕒𝕚𝕣𝕪 𝕋𝕒𝕚𝕝 𝔽𝕚𝕘𝕦𝕣𝕚𝕟𝕖 𝕠𝕗 ℂ𝕙𝕠𝕚𝕔𝕖 $𝟙𝟛"
        android:id="@+id/figurine"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="𝔽𝕒𝕚𝕣𝕪 𝕋𝕒𝕚𝕝 𝕂𝕖𝕪𝕔𝕙𝕒𝕚𝕟 $𝟝"
        android:id="@+id/keychain"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="𝔽𝕒𝕚𝕣𝕪 𝕋𝕒𝕚𝕝 𝔻𝕦𝕓𝕓𝕖𝕕 𝟝 ℙ𝕒𝕔𝕜 𝔹𝕦𝕟𝕕𝕝𝕖 $𝟡𝟘 "
        android:id="@+id/anime"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/increase"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="125dp"
            android:background="#d2d5db"
            android:onClick="increase"
            android:text="+"
            />


        <TextView
            android:id="@+id/quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#fff"
            android:padding="8dp"
            android:text="0" />


        <Button
            android:id="@+id/decrease"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="125dp"
            android:background="#d2d5db"
            android:onClick="decrease"
            android:text="-" />

    </LinearLayout>


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:background="#6ba8ff"
        android:text="𝕆ℝ𝔻𝔼ℝ"
        android:textSize="30dp"
        android:textColor="#fff"
        android:onClick="submitOrder"
        />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRICE:  "
        android:textSize="20dp"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0"
        android:textSize="20dp"
        android:textColor="#fff" />


</LinearLayout>


    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:hint="ℕ𝕒𝕞𝕖"/>


</LinearLayout>



